@{
    ViewBag.Title = "Sydney Fitness Studio";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Sydney Fitness Studio</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            color: #444;
            background-color: #f4f4f4;
        }

        .header {
            background-image: url('https://definitionfitness.com.au/wp-content/uploads/sites/63/2017/12/definitionfitness-about.jpg');
            background-size: cover;
            background-position: center;
            text-align: center;
            color: white;
            padding: 150px 20px;
        }

            .header h1 {
                font-size: 3.5em;
                margin-bottom: 10px;
                letter-spacing: 2px;
                text-transform: uppercase;
                font-weight: bold;
            }

            .header p {
                font-size: 1.2em;
                margin: 0;
            }

        .content-section {
            padding: 50px 20px;
            max-width: 1200px;
            margin: auto;
        }

        .featured-classes {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        .class {
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
        }

            .class:hover {
                transform: translateY(-10px);
            }

            .class img {
                width: 100%;
                height: 180px;
                object-fit: cover;
            }

        .class-info {
            padding: 20px;
            text-align: center;
        }

            .class-info h3 {
                font-size: 1.5em;
                color: #333;
                margin: 0;
            }

            .class-info p {
                font-size: 0.9em;
                color: #666;
                margin: 10px 0 0;
            }

        .cta-section {
            background-color: #ff4c60;
            color: white;
            text-align: center;
            padding: 60px 20px;
            margin-top: 40px;
        }

            .cta-section h2 {
                font-size: 2.5em;
                margin-bottom: 20px;
            }

            .cta-section a {
                display: inline-block;
                padding: 15px 30px;
                background-color: white;
                color: #ff4c60;
                text-decoration: none;
                font-weight: bold;
                border-radius: 5px;
                transition: background-color 0.3s;
            }

                .cta-section a:hover {
                    background-color: #fff1f3;
                }

        .team-section {
            background-color: #fff;
            padding: 50px 20px;
            max-width: 1200px;
            margin: auto;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

            .team-section h2 {
                text-align: center;
                font-size: 2em;
                color: #333;
                margin-bottom: 40px;
            }

        .team-table {
            width: 100%;
            border-collapse: collapse;
        }

            .team-table th, .team-table td {
                padding: 15px;
                border-bottom: 1px solid #ddd;
                text-align: center;
            }

            .team-table th {
                background-color: #ff4c60;
                color: white;
            }

            .team-table tr:hover {
                background-color: #f9f9f9;
            }
    </style>
</head>
<body>

    <div class="header">
        <h1>Welcome to Sydney Fitness Studio</h1>
        <p>Empower Your Fitness Journey</p>
    </div>

    <div class="content-section">
        <div class="featured-classes">
            <!-- Featured Class 1 -->
            <div class="class">
                <img src="https://images.unsplash.com/photo-1594737625785-c50b1e13f9c4" alt="Yoga Class">
                <div class="class-info">
                    <h3>Yoga</h3>
                    <p>Relax and rejuvenate with our calming yoga sessions, suitable for all levels.</p>
                </div>
            </div>

            <!-- Featured Class 2 -->
            <div class="class">
                <img src="https://images.unsplash.com/photo-1550345332-5a5b56a2c868" alt="Pilates Class">
                <div class="class-info">
                    <h3>Pilates</h3>
                    <p>Strengthen your core and improve flexibility with our dynamic Pilates classes.</p>
                </div>
            </div>

            <!-- Featured Class 3 -->
            <div class="class">
                <img src="https://images.unsplash.com/photo-1517836357463-d25dfeac3438" alt="HIIT Class">
                <div class="class-info">
                    <h3>HIIT</h3>
                    <p>Get your heart pumping with our high-intensity interval training sessions.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="cta-section">
        <h2>Reserve Your Spot Today</h2>
        <a href="@Url.Action("Classes", "Reservation")">View Class Schedule</a>
    </div>

    <div class="team-section">
        <h2>Meet Our Team</h2>
        <table class="team-table">
            <thead>
                <tr>
                    <th>Staff ID</th>
                    <th>Staff Name</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Sarah Johnson</td>
                    <td>Yoga Instructor</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Michael Lee</td>
                    <td>Pilates Instructor</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>Emily Davis</td>
                    <td>HIIT Trainer</td>
                </tr>
                <tr>
                    <td>4</td>
                    <td>James Miller</td>
                    <td>Studio Manager</td>
                </tr>
            </tbody>
        </table>
    </div>

</body>
</html>
